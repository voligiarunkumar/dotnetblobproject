@model Blob
<form method="post" asp-action="AddFile" asp-controller="Blob" enctype="multipart/form-data">
    <div class="container">
        <div class="col-6">
            <h3> Container Name - @Context.Request.Query["containerName"].ToString()</h3>
        </div>
        <input hidden name="containerName" value=@Context.Request.Query["containerName"].ToString()/>
        <div class="row border p-2">
            <div class="col-12 pb-2">
                <h4 class="text-primary">Add Item to Blob :</h4>
                </div>
                <div class="col-2">Title:</div>
                <div class="col-4">
                    <input  asp-for="Title" class="form-control pt-1"/>
                    </div>
                    <div class="col-2">Comments:</div>
                   <div class="col-4">
                    <input  asp-for="Comment" class="form-control pt-1"/>
                    </div>
                    <div class="col-2">Upload Blob:</div>
                   <div class="col-4">
                   <input type="file" class="form-control pt-1" name="file" />
                    </div>
                    <div class="col-2"></div>
                   <div class="col-4">
                   <button type="submit" class="btn btn-success form-control">Add</button>
                    </div> 
               </div>
    </div>
</form>
